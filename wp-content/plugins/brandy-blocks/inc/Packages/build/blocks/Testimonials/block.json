{
  "apiVersion": 3,
  "title": "Testimonials",
  "name": "brandy/testimonials",
  "category": "brandy-blocks",
  "icon": "testimonial",
  "description": "Display a responsive testimonial slider.",
  "attributes": {
    "number_testimonials": {
      "type": "number",
      "attribute": "data-length",
      "default": 3
    },
    "shadow": {
      "type": "object",
      "default": {
        "type": "regular",
        "x": 0,
        "y": 4,
        "blur": 16,
        "spread": 0,
        "color": "rgba(0, 0, 0, 0.06)"
      }
    },
    "change_detecter": {
      "string": "string",
      "default": 0
    },
    "carousel": {
      "type": "object",
      "default": {
        "autoplay": true,
        "infinite_loop": true,
        "transition_speed": 500
      }
    },
    "item_spacing": {
      "type": "number",
      "default": 50
    },
    "content_alignment": {
      "type": "string",
      "default": "center"
    },
    "avatar": {
      "type": "object",
      "default": {
        "visible": true,
        "size": 80,
        "border_radius": {
          "top": 50,
          "left": 50,
          "right": 50,
          "bottom": 50,
          "constrain": true
        },
        "fitting": "cover",
        "margin": {
          "top": 0,
          "left": 0,
          "right": 0,
          "bottom": 7,
          "constrain": false
        }
      }
    },
    "name": {
      "type": "object",
      "default": {
        "visible": true,
        "color": "var(--body_text, #122940)",
        "typography": {
          "font_size": 18,
          "bold": false,
          "italic": false,
          "text_transform": "none",
          "font_weight": 500
        },
        "margin": {
          "top": 0,
          "left": 0,
          "right": 0,
          "bottom": 0,
          "constrain": false
        }
      }
    },
    "subname": {
      "type": "object",
      "default": {
        "visible": true,
        "color": "var(--secondary_text, #7F8287)",
        "typography": {
          "font_size": 14,
          "bold": false,
          "italic": false,
          "text_transform": "none",
          "font_weight": 300
        },
        "margin": {
          "top": 0,
          "left": 0,
          "right": 0,
          "bottom": 0,
          "constrain": false
        }
      }
    },
    "content": {
      "type": "object",
      "default": {
        "visible": true,
        "color": "var(--palette_3, #122940)",
        "typography": {
          "font_size": 24,
          "bold": false,
          "italic": true,
          "text_transform": "none",
          "font_weight": 300
        },
        "margin": {
          "top": 30,
          "left": 0,
          "right": 0,
          "bottom": 30,
          "constrain": false
        }
      }
    },
    "star": {
      "type": "object",
      "default": {
        "visible": true,
        "size": 16,
        "active_color": "#f8b84e",
        "default_color": "#bebfc2",
        "spacing": 5,
        "margin": {
          "top": 0,
          "left": 0,
          "right": 0,
          "bottom": 0,
          "constrain": false
        }
      }
    },
    "arrow": {
      "type": "object",
      "default": {
        "size": 30,
        "icon_color": "#808890",
        "background_color": "#EFF2F4"
      }
    },
    "dots": {
      "type": "object",
      "default": {
        "size": 12,
        "active_color": "#122940",
        "default_color": "#D3DCE5",
        "spacing": 12
      }
    },
    "layout": {
      "type": "array",
      "default": [
        "avatar",
        "name",
        "subname",
        "content",
        "rating"
      ]
    }
  },
  "example": {
    "viewportWidth": 2000,
    "attributes": {}
  },
  "providesContext": {
    "brandy/testimonials/layout": "layout"
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "script": "brandy-blocks/testimonials",
  "selectors": {
    "color": {
      "text": "h2.testimonials__heading"
    }
  }
}