{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Shoes styles",
  "description": "Brandy Shoes site",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#0075FF",
          "slug": "brandy-accent",
          "name": "Brandy accent"
        },
        {
          "color": "#091727",
          "slug": "brandy-primary-text",
          "name": "Brandy primary text"
        },
        {
          "color": "#495C70",
          "slug": "brandy-secondary-text",
          "name": "Brandy secondary text"
        },
        {
          "color": "#edf3f9",
          "slug": "brandy-border",
          "name": "Brandy border"
        },
        {
          "color": "#FFFFFF",
          "slug": "brandy-theme-background",
          "name": "Brandy theme background"
        },
        {
          "color": "#122941",
          "slug": "brandy-primary-black",
          "name": "Brandy primary black"
        },
        {
          "color": "#F7F7FA",
          "slug": "brandy-theme-secondary-background",
          "name": "Brandy theme secondary background"
        },
        {
          "color": "#F8F9FA",
          "slug": "brandy-theme-third-background",
          "name": "Brandy theme third background"
        },
        {
          "color": "#EDF3F9",
          "slug": "brandy-theme-fourth-background",
          "name": "Brandy theme fourth background"
        },
        {
          "color": "#EBF5FF",
          "slug": "brandy-theme-fifth-background",
          "name": "Brandy theme fifth background"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Jost",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/jost/jost-regular.woff2"
              ]
            },
            {
              "fontFamily": "Jost",
              "fontStyle": "italic",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/jost/jost-italic.woff2"
              ]
            }
          ],
          "fontFamily": "\"Jost\", sans-serif",
          "name": "Jost",
          "slug": "jost"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Neonderthaw",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/neonderthaw/neonderthaw-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Neonderthaw\", sans-serif",
          "name": "Neonderthaw",
          "slug": "neonderthaw"
        },
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "system-fonts",
          "name": "System fonts"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1440px"
    },
    "shadow": {
      "presets": [
        {
          "name": "Brandy shoes shadow",
          "slug": "brandy-shoes-shadow",
          "shadow": "4px 4px 0px 0px var(--wp--preset--color--brandy-primary-text)"
        },
        {
          "name": "Brandy shoes shadow small",
          "slug": "brandy-shoes-shadow-small",
          "shadow": "1.5px 1.5px 0px 0px var(--wp--preset--color--brandy-primary-text)"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|jost"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|jost",
          "fontWeight": "500"
        }
      },
      "button": {
        "color": {
          "text": "var:preset|color|brandy-primary-text",
          "background": "#ffffff"
        },
        "border": {
          "radius": "12px",
          "width": "1.5px",
          "color": "var:preset|color|brandy-primary-text",
          "style": "solid"
        },
        ":hover": {
          "border": {
            "color": "var(--primary-button-hover-background-color)"
          }
        },
        "spacing": {
          "padding": {
            "left": "30px",
            "right": "30px",
            "top": "17px",
            "bottom": "17px"
          }
        },
        "typography": {
          "fontSize": "16px",
          "fontWeight": "500",
          "lineHeight": "1"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "color": {
              "text": {
                "ref": "styles.elements.button.color.text"
              },
              "background": {
                "ref": "styles.elements.button.color.background"
              }
            },
            "border": {
              "radius": {
                "ref": "styles.elements.button.border.radius"
              },
              "width": {
                "ref": "styles.elements.button.border.width"
              },
              "color": {
                "ref": "styles.elements.button.border.color"
              },
              "style": {
                "ref": "styles.elements.button.border.style"
              }
            }
          }
        }
      },
      "woocommerce/product-button": {
        "spacing": {
          "padding": {
            "top": "10px",
            "bottom": "10px",
            "left": "30px",
            "right": "30px"
          }
        }
      }
    }
  }
}
