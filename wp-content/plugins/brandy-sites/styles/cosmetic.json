{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Cosmetic styles",
  "description": "Cosmetic site",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#F3B392",
          "slug": "brandy-accent",
          "name": "Brandy accent"
        },
        {
          "color": "#151617",
          "slug": "brandy-primary-text",
          "name": "Brandy primary text"
        },
        {
          "color": "#718497",
          "slug": "brandy-secondary-text",
          "name": "Brandy secondary text"
        },
        {
          "color": "#edf3f9",
          "slug": "brandy-border",
          "name": "Brandy border"
        },
        {
          "color": "#ffffff",
          "slug": "brandy-theme-background",
          "name": "Brandy theme background"
        },
        {
          "color": "#151618",
          "slug": "brandy-primary-black",
          "name": "Brandy primary black"
        },
        {
          "color": "#F8FAFCCC",
          "slug": "brandy-theme-secondary-background",
          "name": "Brandy theme secondary background"
        },
        {
          "color": "#F8F9FA",
          "slug": "brandy-theme-third-background",
          "name": "Brandy theme third background"
        },
        {
          "color": "#EDF3F9",
          "slug": "brandy-theme-fourth-background",
          "name": "Brandy theme fourth background"
        },
        {
          "color": "#EBF5FF",
          "slug": "brandy-theme-fifth-background",
          "name": "Brandy theme fifth background"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Amiri",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/amiri/amiri-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Amiri\", serif",
          "name": "Amiri",
          "slug": "amiri"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Outfit",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": ["file:./assets/fonts/outfit/outfit-regular.ttf"]
            }
          ],
          "fontFamily": "\"Outfit\", sans-serif",
          "name": "Outfit",
          "slug": "outfit"
        },
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "system-fonts",
          "name": "System fonts"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1440px"
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|outfit"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|amiri"
        }
      },
      "button": {
        "css": "& {transition: all ease-in-out var(--theme-component-transition-duration, .2s) !important}",
        "shadow": "var(--primary-button-box-shadow)",
        "color": {
          "text": "#ffffff",
          "background": "#161718"
        },
        ":hover": {
          "color": {
            "text": "var(--primary-button-hover-color)",
            "background": "var(--primary-button-hover-background-color)"
          },
          "shadow": "var(--primary-button-hover-box-shadow)"
        },
        "border": {
          "radius": "12px"
        },
        "spacing": {
          "padding": {
            "left": "24px",
            "right": "24px",
            "top": "10px",
            "bottom": "10px"
          }
        },
        "typography": {
          "fontSize": "14px",
          "fontWeight": "600",
          "lineHeight": "1.42"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "color": {
              "background": "#ffffff00"
            },
            "border": {
              "radius": {
                "ref": "styles.elements.button.border.radius"
              },
              "width": "2px"
            }
          }
        }
      }
    }
  }
}
